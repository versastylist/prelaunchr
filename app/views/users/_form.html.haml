= simple_form_for @user, html: {novalidate: false, class: "form-inline"} do |f|
	= f.input :full_name, label: false, placeholder: "Full Name", input_html: {required: false }
	= f.input :email, as: :email, label: false, placeholder: "Email", input_html: {required: true }
	.form-group.submit
		= f.button :submit, "STEP INSIDE", class: "btn btn-branded"